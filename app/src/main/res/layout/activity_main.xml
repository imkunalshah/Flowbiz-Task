<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/l1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40ssp">

        <EditText
            android:hint="@string/search"
            android:paddingStart="@dimen/_10ssp"
            android:paddingEnd="0dp"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:id="@+id/searchET"
            android:layout_weight="1.6"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/go"
            style="@style/buttonTheme"
            android:fontFamily="monospace"
            android:text="@string/go"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_margin="@dimen/_5ssp"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/filter"
            app:tint="@color/black"
            android:padding="@dimen/_5ssp"
            android:src="@drawable/ic_filter"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:id="@+id/filterOptions"
        android:layout_below="@+id/l1"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_85ssp">
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/black"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/_5ssp"
            android:layout_marginStart="@dimen/_20ssp"
            android:layout_marginEnd="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginBottom="@dimen/_10ssp"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/lb1"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/_14ssp"
                    android:text="@string/average_view_count"
                    android:maxLines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/avc"
                    android:layout_below="@+id/lb1"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/_12ssp"
                    android:text=""
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginStart="@dimen/_20ssp"
            android:layout_marginEnd="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginBottom="@dimen/_10ssp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/_5ssp"
            android:layout_width="0dp"
            app:cardBackgroundColor="@color/black"
            android:layout_height="match_parent">
            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/lb2"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/_14ssp"
                    android:text="@string/average_answer_count"
                    android:maxLines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/aac"
                    android:layout_below="@+id/lb2"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/_12ssp"
                    android:text=""
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="@dimen/_10ssp"
        android:id="@+id/rvQuestions"
        android:layout_below="@+id/filterOptions"
        android:layout_width="match_parent"
        android:nestedScrollingEnabled="true"
        android:layout_height="match_parent"/>
    <include
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_30ssp"
        android:id="@id/scroll_to_top"
        layout="@layout/scroll_to_top"/>
</RelativeLayout>